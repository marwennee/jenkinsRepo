pipeline {
    environment {
        VERSION = env.GIT_COMMIT.take(7)
    }
    agent any

    stages {
        stage('TESTING RESULTS') {
            steps {
                script {
                    def folders = sh(returnStdout: true, script: "git show | grep -E '\+\+\+' | cut -d / -f2")
                    sh "echo $folders"
                }
            }
        }
      
    }
}
