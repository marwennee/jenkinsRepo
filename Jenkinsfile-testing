pipeline {
    environment {
        NAME = "front-service"
        VERSION = env.GIT_COMMIT.take(7)
        REGISTRY = 'marwenguesmii/angular_nginx'
        REGISTRY_CREDENTIAL = 'dockerhub'
        HELM_REPO = "https://github.com/marwennee/HelmCharts"
        PROJECT_REPO = "https://github.com/marwennee/front-service"
        HELM_FOLDER = "HelmCharts/helm-front"
        PROJECT_FOLDER = "front-service"
    }
    agent {
        kubernetes {
            yaml '''
                spec:
                    containers:
                        - name: docker
                          image: docker:19.03
                          command:
                            - cat
                          tty: true
                          privileged: true
                          volumeMounts:
                            - name: dockersock
                              mountPath: /var/run/docker.sock
                        - name: helm
                          image: lachlanevenson/k8s-helm:v3.1.1
                          command:
                            - cat
                          tty: true
                    volumes:
                        - name: dockersock
                          hostPath:
                            path: /var/run/docker.sock
                '''
        }
    }

    stages {
        stage('Checkout SCM: PROJECT & HELM'){
            steps {
                git credentialsId: 'github', url: "${PROJECT_REPO}"
                git credentialsId: 'github', url: "${HELM_REPO}"
            }

        }
        stage('Docker Build') {

            steps {
                container('docker') {
                    sh "docker build -t ${REGISTRY}:${VERSION} ./${PROJECT_FOLDER}"
                }
            }
        }

        stage('Docker Publish') {
            steps {
                container('docker') {
                    withDockerRegistry([credentialsId: "${REGISTRY_CREDENTIAL}", url: ""]) {
                        sh "docker push ${REGISTRY}:${VERSION}"
                    }
                }
            }
        }

        stage('Kubernetes Deploy') {
            steps {
                container('helm') {
                    sh "helm upgrade --install --force --set image.tag=${VERSION}  ${NAME} ./${HELM_FOLDER}"
                }
            }
        }        


    }
}
