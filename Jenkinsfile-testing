pipeline {
    environment {
        NAME = "front-service"
        VERSION = env.GIT_COMMIT.take(7)
        REGISTRY = 'marwenguesmii/angular_nginx'
        REGISTRY_CREDENTIAL = 'dockerhub'
    }
    agent {
        kubernetes {
            yaml '''
                spec:
                    containers:
                        - name: docker
                          image: docker:19.03
                          command:
                            - cat
                          tty: true
                          privileged: true
                          volumeMounts:
                            - name: dockersock
                              mountPath: /var/run/docker.sock
                        - name: helm
                          image: lachlanevenson/k8s-helm:v3.1.1
                          command:
                            - cat
                          tty: true
                    volumes:
                        - name: dockersock
                          hostPath:
                            path: /var/run/docker.sock
                '''
        }
    }

    stages {
        stage('GIT CHECKOUT'){
            withCredentials([gitUsernamePassword(credentialsId: 'github',
                             gitToolName: 'git-tool')]) {
                sh "git clone https://github.com/marwennee/front-service"
            }
        }
    }

    stages {
        stage('Docker Build') {

            steps {
                container('docker') {
                    sh "docker image ls"
                }
            }
        }

    }
}
